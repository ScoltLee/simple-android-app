<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".QLSV_SQLite">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main"
        android:gravity="center"
        android:padding="9dp"
        android:text="Quản Lý Sinh Viên"
        android:textColor="#FFF"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Mã Lớp:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtMaLop"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/khung"
                android:ems="10"
                android:gravity="center"
                android:inputType="textCapWords"
                android:padding="2dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Tên Lớp:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtTenLop"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/khung"
                android:ems="10"
                android:gravity="center"
                android:inputType="textCapSentences"
                android:padding="2dp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Sĩ Số:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtSiSo"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/khung"
                android:padding="2dp"
                android:layout_marginTop="3dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="number" />


        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnInsert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/seach"
            android:text="Insert Lớp"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="@drawable/seach"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:layout_weight="1"
            android:text="Delete Lớp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/seach"
            android:text="Update Lớp"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnQuery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="@drawable/seach"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:layout_weight="1"
            android:text="Query Lớp" />
    </LinearLayout>

</LinearLayout>